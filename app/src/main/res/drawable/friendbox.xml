<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected & Pressed: Background Light -->
    <item android:state_selected="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary" />  <!-- Light -->
            <stroke android:width="1dp" android:color="?attr/colorSecondary" /> <!-- Border Dark -->
        </shape>
    </item>
    <!-- Selected Default: Background Light -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary" />  <!-- Light -->
            <stroke android:width="1dp" android:color="?attr/colorSecondary" /> <!-- Border Dark -->
        </shape>
    </item>
    <!-- Unselected & Pressed: Background Dark -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSecondary" />  <!-- Dark -->
            <stroke android:width="1dp" android:color="?attr/colorPrimary" /> <!-- Border Light -->
        </shape>
    </item>
    <!-- Unselected Default: Background Dark -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSecondary" />  <!-- Dark -->
            <stroke android:width="1dp" android:color="?attr/colorPrimary" /> <!-- Border Light -->
        </shape>
    </item>
</selector>
